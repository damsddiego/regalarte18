<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_stock_customer_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="text-center">
                        <h2>Stock By Customer Location Report</h2>
                        <p>
                            <strong>Report Date:</strong>
                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                        </p>
                        <p t-if="data.get('date_from')">
                            <strong>From Date:</strong>
                            <span t-esc="data.get('date_from')"/>
                        </p>
                        <p t-if="data.get('date_to')">
                            <strong>To Date:</strong>
                            <span t-esc="data.get('date_to')"/>
                        </p>
                    </div>

                    <table class="table table-sm table-bordered mt-4">
                        <thead style="background-color: #0a79c2; color: white;">
                            <tr>
                                <th class="text-center">Unique ID</th>
                                <th class="text-center">Customer Name</th>
                                <th class="text-center">Location</th>
                                <th class="text-right">Total Quantity</th>
                                <th class="text-right">Total Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="grand_total_qty" t-value="0"/>
                            <t t-set="grand_total_value" t-value="0"/>

                            <t t-foreach="records" t-as="record">
                                <tr>
                                    <td><span t-esc="record.get('unique_id', '')"/></td>
                                    <td><span t-esc="record.get('partner_name', '')"/></td>
                                    <td><span t-esc="record.get('location_name', '')"/></td>
                                    <td class="text-right">
                                        <span t-esc="'{:,.2f}'.format(record.get('total_qty', 0))"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="'{:,.2f}'.format(record.get('total_value', 0))"/>
                                    </td>
                                </tr>
                                <t t-set="grand_total_qty" t-value="grand_total_qty + record.get('total_qty', 0)"/>
                                <t t-set="grand_total_value" t-value="grand_total_value + record.get('total_value', 0)"/>
                            </t>

                            <!-- Grand Total Row -->
                            <tr style="background-color: #99dfe7; font-weight: bold;">
                                <td colspan="3" class="text-right">GRAND TOTAL:</td>
                                <td class="text-right">
                                    <span t-esc="'{:,.2f}'.format(grand_total_qty)"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="'{:,.2f}'.format(grand_total_value)"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="mt-4" t-if="not records">
                        <p class="text-center text-muted">
                            <em>No data found for the selected criteria.</em>
                        </p>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
