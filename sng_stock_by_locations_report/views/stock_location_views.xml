<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit stock.location form view to add partner_id field -->
    <record id="view_location_form_inherit_partner" model="ir.ui.view">
        <field name="name">stock.location.form.inherit.partner</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_form"/>
        <field name="arch" type="xml">
            <field name="usage" position="after">
                <field name="partner_id"
                       invisible="usage != 'customer'"
                       string="Associated Customer"/>
            </field>
        </field>
    </record>

    <!-- Add partner_id to tree view -->
    <record id="view_location_tree_inherit_partner" model="ir.ui.view">
        <field name="name">stock.location.tree.inherit.partner</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_tree2"/>
        <field name="arch" type="xml">
            <field name="usage" position="after">
                <field name="partner_id" optional="hide"/>
            </field>
        </field>
    </record>
</odoo>
