<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_sng_stock_customer_report_wizard" model="ir.ui.view">
        <field name="name">sng.stock.customer.report.wizard</field>
        <field name="model">sng.stock.customer.report</field>
        <field name="arch" type="xml">
            <form string="Stock By Customer Location Report">
                <group>
                    <group>
                        <field name="report_format" widget="radio"/>
                        <field name="report_on" widget="radio"/>
                        <field name="partner_ids" widget="many2many_tags"
                               invisible="report_on == 'all_customers'"/>
                    </group>
                    <group>
                        <field name="companies" widget="many2many_tags"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                </group>
                <footer>
                    <button name="action_print_report" string="Generate Report"
                            type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_sng_stock_customer_report_wizard" model="ir.actions.act_window">
        <field name="name">Stock By Customer Location</field>
        <field name="res_model">sng.stock.customer.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_sng_stock_customer_report"/>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_sng_stock_customer_report"
              name="Stock By Customer Location"
              parent="stock.menu_warehouse_report"
              action="action_sng_stock_customer_report_wizard"
              sequence="50"/>
</odoo>
