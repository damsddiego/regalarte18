<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_payment_form_luis" model="ir.ui.view">
        <field name="name">view.account.payment.form.luis</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='main_group']" position="after">
                <group>
                    <field name="pay_moves" string="Pay Invoices" invisible="payment_type != 'inbound' or not partner_id" readonly="state != 'draft'"/>
                    <field name="pay_moves" string="Pay Bills" invisible="payment_type != 'outbound' or not partner_id" readonly="state != 'draft'"/>
                    <field name="writeoff_amt" invisible="pay_moves == False" widget="monetary" class="oe_inline" readonly="state != 'draft'"/>
                    <field name="writeoff_account_id" invisible="pay_moves == False" class="oe_inline" readonly="state != 'draft'"/>
                    <field name="writeoff_notes" invisible="pay_moves == False" class="oe_inline" readonly="state != 'draft'"/>
                </group>
                <div invisible="pay_moves != True">
                    <h2>
                        <span invisible="payment_type != 'inbound'">Unpaid Invoices</span>
                        <span invisible="payment_type != 'outbound'">Unpaid Bills</span>
                    </h2>
                    <button name="action_reload_outstanding_moves" type="object" string="Reload Outstanding" class="oe_highlight" invisible="state != 'draft'"/>
		            <field name="outstanding_move_lines" readonly="state != 'draft'">
		                <list create="false" editable="bottom">
		                    <field name="id" column_invisible="1"/>
		                    <field name="select_to_pay"/>
		                    <field name="name"/>
		                    <field name="account_move_id" column_invisible="1"/>
		                    <field name="company_id" column_invisible="1"/>
		                    <field name="invoice_date"/>
		                    <field name="move_currency_id"/>
		                    <field name="amount_untaxed" optional="hide"/>
		                    <field name="amount_total" sum="amount_total"/>
		                    <field name="amount_residual" widget="monetary" sum="amount_residual" />
		                    <button name="open_invoice" class="fa fa-eye" title="View" type="object"/>		                    
		                </list>
		            </field>
	        	</div>
            </xpath>
        </field>
    </record>

</odoo>
