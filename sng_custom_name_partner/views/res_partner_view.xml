<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario para res.partner -->
    <record id="view_partner_form_inherit_sng" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.sng.custom.name</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="commercial_name" placeholder="Nombre Comercial..."/>
            </xpath>
        </field>
    </record>

    <!-- Vista de bÃºsqueda para res.partner -->
    <record id="view_partner_search_inherit_sng" model="ir.ui.view">
        <field name="name">res.partner.search.inherit.sng.custom.name</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <!-- Agregar el campo al panel de bÃºsqueda principal -->
            <xpath expr="//field[@name='name']" position="after">
                <field name="commercial_name" string="Nombre Comercial" filter_domain="[('commercial_name', 'ilike', self)]"/>
            </xpath>
        </field>
    </record>
</odoo>