<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_landed_cost_form_inherit_line_select" model="ir.ui.view">
        <field name="name">stock.landed.cost.form.line.select</field>
        <field name="model">stock.landed.cost</field>
        <field name="inherit_id" ref="stock_landed_costs.view_stock_landed_cost_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='picking_ids']" position="after">
                <field name="selected_move_ids" widget="many2many_tags" options="{'no_create': True}"
                       placeholder="(Opcional) Selecciona líneas específicas" readonly="state!='draft'"/>
            </xpath>
        </field>
    </record>
</odoo>
