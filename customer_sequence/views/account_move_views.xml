<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add unique_id to invoice form view -->
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.view.form.inherit.customer.sequence</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="partner_unique_id" readonly="1" string="Código cliente"
                       invisible="move_type not in ('out_invoice', 'out_refund', 'in_invoice', 'in_refund')"/>
            </xpath>
        </field>
    </record>

    <!-- Add unique_id to invoice tree view -->
    <record id="view_invoice_tree" model="ir.ui.view">
        <field name="name">account.move.view.tree.inherit.customer.sequence</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_partner_display_name'][1]" position="after">
                <field name="partner_unique_id" optional="show" string="Código cliente"/>
            </xpath>
        </field>
    </record>

    <!-- Add search by unique_id in invoices -->
    <record id="view_account_invoice_filter" model="ir.ui.view">
        <field name="name">account.move.view.search.inherit.customer.sequence</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="partner_unique_id" string="Código cliente"
                       filter_domain="[('partner_id.unique_id', 'ilike', self)]"/>
            </field>
        </field>
    </record>
</odoo>
