<odoo>
  <data>
    <record id="action_res_partner_delivery_type" model="ir.actions.act_window">
      <field name="name">Tipos de entrega</field>
      <field name="res_model">res.partner.delivery.type</field>
      <field name="view_mode">list,form</field>
      <field name="context">{'search_default_my_company': 1}</field>
      <field name="help" type="html">
        <p>Administra aquí los valores del campo <b>Tipo de entrega</b> de los contactos.</p>
      </field>
    </record>

    <!-- Menú seguro bajo Contactos -->
    <menuitem id="menu_res_partner_delivery_type"
              name="Tipos de entrega"
              parent="contacts.menu_contacts"
              action="action_res_partner_delivery_type"
              sequence="130"/>

    <record id="view_res_partner_delivery_type_list" model="ir.ui.view">
      <field name="name">res.partner.delivery.type.list</field>
      <field name="model">res.partner.delivery.type</field>
      <field name="arch" type="xml">
        <list editable="bottom">
          <field name="sequence" widget="handle"/>
          <field name="name"/>
          <field name="code"/>
          <field name="company_id"/>
          <field name="active"/>
          <field name="note"/>
        </list>
      </field>
    </record>

    <record id="view_res_partner_delivery_type_form" model="ir.ui.view">
      <field name="name">res.partner.delivery.type.form</field>
      <field name="model">res.partner.delivery.type</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="code"/>
              <field name="sequence"/>
              <field name="company_id" options="{'no_create_edit': True}"/>
              <field name="active"/>
            </group>
            <group>
              <field name="note"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_res_partner_delivery_type_search" model="ir.ui.view">
      <field name="name">res.partner.delivery.type.search</field>
      <field name="model">res.partner.delivery.type</field>
      <field name="arch" type="xml">
        <search>
          <field name="name"/>
          <filter string="De mi compañía" name="my_company" domain="[('company_id','=', uid.company_id)]"/>
          <filter string="Globales" name="globals" domain="[('company_id','=', False)]"/>
          <separator/>
          <filter string="Activos" name="active" domain="[('active','=', True)]"/>
        </search>
      </field>
    </record>
  </data>
</odoo>
