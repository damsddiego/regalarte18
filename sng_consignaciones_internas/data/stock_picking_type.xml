<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="location_consignaciones" model="stock.location">
            <field name="name">Consignaciones</field>
            <field name="location_id" ref="stock.stock_location_stock"/>
            <field name="usage">internal</field>
        </record>

        <record id="seq_picking_consignation" model="ir.sequence">
            <field name="name">Entrega de consignación</field>
            <field name="code">stock.picking.consignation</field>
            <field name="prefix">CONS/%(year)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <record id="picking_type_consignation_internal" model="stock.picking.type">
            <field name="name">Entrega de consignación</field>
            <field name="code">internal</field>
            <field name="sequence_code">CONS</field>
            <field name="sequence_id" ref="sng_consignaciones_internas.seq_picking_consignation"/>
            <field name="default_location_src_id" ref="stock.stock_location_stock"/>
            <field name="default_location_dest_id" ref="sng_consignaciones_internas.location_consignaciones"/>
            <field name="use_existing_lots">True</field>
        </record>
    </data>
</odoo>
