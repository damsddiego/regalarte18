<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="api_app_call_log_form" model="ir.ui.view">
        <field name="name">api.app.call.log.view.form</field>
        <field name="model">api.app.call.log</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="user_id"/>
                            <field name="api_type"/>
                            <field name="remote_addr"/>
                            <field name="remote_port"/>
                            <field name="request_method"/>
                            <field name="path_info"/>
                            <field name="query_string"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="api_app_call_log_list" model="ir.ui.view">
        <field name="name">api.app.call.log.view.list</field>
        <field name="model">api.app.call.log</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" optional="show"/>
                <field name="user_id" optional="show"/>
                <field name="api_type" optional="show"/>
                <field name="remote_addr" optional="show"/>
                <field name="remote_port" optional="show"/>
                <field name="request_method" optional="show"/>
                <field name="path_info" optional="show"/>
                <field name="query_string" optional="show"/>
            </list>
        </field>
    </record>


    <record id="api_app_call_log_action" model="ir.actions.act_window">
        <field name="name">API Audit Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">api.app.call.log</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                API Audit Report
            </p>
        </field>
    </record>

    <menuitem id="api_app_call_log"
              name="API Audit Report"
              parent="api_app_root"
              action="api_app_call_log_action"
              sequence="200"/>


</odoo>
