<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="api_app_create_form" model="ir.ui.view">
        <field name="name">api.app.create.view.form</field>
        <field name="model">api.app.create</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="model_alias"/>
                        </group>
                        <group>
                            <field name="model_name"/>
                            <field name="api_expiry_date"/>
                        </group>

                        <group colspan="4">
                            <field name="allowed_field_list" domain="[('model_id', '=', model_name)]"
                                   widget="many2many_tags"/>
                        </group>

                    </group>

                    <notebook>
                        <page string="User List">
                            <field name="allowed_user_list"/>
                        </page>
                    </notebook>
                    <group>
                        .
                        <br/>
                        .
                        <br/>
                        <h5>How to use it:</h5>
                    </group>

                    <group>
                        <group colspan="4">
                            <field name="final_url" nolabel="1"/>
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <record id="api_app_create_list" model="ir.ui.view">
        <field name="name">api.app.create.view.list</field>
        <field name="model">api.app.create</field>
        <field name="arch" type="xml">
            <list decoration-danger="state=='In-Active' or is_api_active == False">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="model_name"/>
                <field name="model_alias"/>
                <field name="api_expiry_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>


    <record id="api_app_create_action" model="ir.actions.act_window">
        <field name="name">Create API</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">api.app.create</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create!
            </p>
        </field>
    </record>

    <menuitem id="api_app_create"
              name="Create API"
              parent="api_app_root"
              action="api_app_create_action"
              sequence="14"/>


</odoo>
